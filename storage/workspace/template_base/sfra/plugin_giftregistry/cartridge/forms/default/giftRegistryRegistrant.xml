<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19" secure="false">
    <field formid="role" label="giftregistry.registrantRole"
           type="string" mandatory="true" binding="role"
           missing-error="error.message.required"
           max-length="60" />

    <field formid="firstName" label="giftregistry.registrantFirstName"
           type="string" mandatory="true" binding="firstName"
           missing-error="error.message.required"
           max-length="60" />

    <field formid="lastName" label="giftregistry.registrantLastName"
           type="string" mandatory="true" binding="lastName"
           missing-error="error.message.required"
           max-length="60" />

    <field formid="email" label="resource.email" type="string"
           mandatory="true" binding="email" regexp="^[\w.%+-]+@[\w.-]+\.[\w]{2,6}$"
           parse-error="error.message.parse.email.profile.form"
           missing-error="error.message.required"
           value-error="error.message.parse.email.profile.form" max-length="60" />
</form>